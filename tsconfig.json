{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es2022",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2018",
      "es2020",
      "es2021",
      "es2022"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/stories/**/*",
    "src/setupTests.ts",
    "src/workerMock.js",
    "src/tests/**/*"
  ]
}